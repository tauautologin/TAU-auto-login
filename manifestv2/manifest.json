{
  "manifest_version": 2,
  "name": "TAU Auto Login",
  "version": "1.1",
  "description": "Auto login for TAU portal, handling dynamic content",
  "permissions": ["storage", "tabs"],
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
      }
  },
  "content_scripts": [
      {
          "matches": ["https://nidp.tau.ac.il/nidp/*"],
          "js": ["content.js"]
      }
  ],
  "applications": {
      "gecko": {
          "id": "tau-auto-login@example.com",
          "strict_min_version": "60.0"
      }
  }
}
